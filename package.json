{
  "name": "txtanime.js",
  "version": "1.0.2",
  "description": "It is a JavaScript library, which contains many beautiful and free text effects.",
  "main": "entry.js",
  "scripts": {
    "build-plugin": "webpack --config webpack.config.js",
    "watch-plugin": "webpack --config webpack.config.js --watch",
    "build-site": "webpack --config site.config.js",
    "watch-site": "webpack --config site.config.js --watch",
    "entry": "rollup --input src/index.js --file entry.js --plugin postcss --format umd --name TxtAnime" 
