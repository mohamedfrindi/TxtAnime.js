  "keywords": [
    "javascript",
    "plugin",
    "js plugin",
    "animation",
    "css animation",
    "javascript animation",
    "txt anime",
    "TxtAnime",
    "text animation",
    "text animation css",
    "text animation javascript"
  ],
  "author": "Mohamed Frindi",
  "license": "ISC",
  "devDependencies": {
    "browser-sync-webpack-plugin": "^2.3.0",
    "css-loader": "^6.5.1",
    "html-webpack-plugin": "^5.5.0",
    "node-sass": "^6.0.1",
    "rollup": "^2.60.2",
    "rollup-plugin-postcss": "^4.0.2",
    "sass-loader": "^12.3.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohamedfrindi/TxtAnime.js.git"
  },
